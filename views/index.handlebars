<body>
 <h1>Burger Time!</h1>

<h2>Available Burgers</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
      <button type="button" class="devoured btn btn-warning" id="eat-button" data-id="{{this.id}}"
      data-state="{{this.devour}}"><span class="fa fa-usd"></span></button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that you have eaten!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
      <button type="button" class="btn btn-danger" data-id="{{this.id}}"
      data-state="{{this.devour}}"><span class="fa fa-trash"></span></button>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="new-burger">Burger Name:</label>
    <input type="text" id="new-burger" name="burger_name">
  </div>

  <button type="submit">Add a Burger</button>
</form>


</body>